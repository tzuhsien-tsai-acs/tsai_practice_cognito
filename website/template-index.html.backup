        function confirmSignUp() {
            const verificationCode = document.getElementById('verificationCode').value.trim();
            
            if (!verificationCode) {
                showMessage('è«‹è¼¸å…¥é©—è­‰ç¢¼', 'error');
                return;
            }
            
            if (!pendingUsername) {
                showMessage('è«‹å…ˆè¨»å†Šå¸³æˆ¶', 'error');
                return;
            }
            
            if (!userPool) {
                showMessage('ç³»çµ±å°šæœªåˆå§‹åŒ–ï¼Œè«‹é‡æ–°æ•´ç†é é¢', 'error');
                return;
            }
            
            showLoading('verifyBtn', 'é©—è­‰ä¸­...');
            clearMessage();
            
            const userData = {
                Username: pendingUsername,
                Pool: userPool
            };
            
            const cognitoUser = new AmazonCognitoIdentity.CognitoUser(userData);
            
            debugLog('é–‹å§‹é©—è­‰ç”¨æˆ¶: ' + pendingUsername);
            
            cognitoUser.confirmRegistration(verificationCode, true, function(err, result) {
                hideLoading('verifyBtn', 'é©—è­‰å¸³æˆ¶');
                
                if (err) {
                    debugLog('é©—è­‰å¤±æ•—: ' + err.message);
                    let errorMessage = 'é©—è­‰å¤±æ•—: ';
                    
                    switch (err.code) {
                        case 'CodeMismatchException':
                            errorMessage += 'é©—è­‰ç¢¼ä¸æ­£ç¢º';
                            break;
                        case 'ExpiredCodeException':
                            errorMessage += 'é©—è­‰ç¢¼å·²éæœŸ';
                            break;
                        default:
                            errorMessage += err.message;
                    }
                    
                    showMessage(errorMessage, 'error');
                    return;
                }
                
                debugLog('é©—è­‰æˆåŠŸ');
                showMessage('å¸³æˆ¶é©—è­‰æˆåŠŸï¼è«‹ä½¿ç”¨æ‚¨çš„å¸³æˆ¶ç™»å…¥ã€‚', 'success');
                
