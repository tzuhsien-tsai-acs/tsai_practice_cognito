        function signUp(event) {
            event.preventDefault();
            
            if (!userPool) {
                showMessage('ç³»çµ±å°šæœªåˆå§‹åŒ–ï¼Œè«‹é‡æ–°æ•´ç†é é¢', 'error');
                return;
            }
            
            const email = document.getElementById('registerEmail').value.trim();
            const password = document.getElementById('registerPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            // é©—è­‰è¼¸å…¥
            if (!email || !password || !confirmPassword) {
                showMessage('è«‹å¡«å¯«æ‰€æœ‰æ¬„ä½', 'error');
                return;
            }
            
            if (password !== confirmPassword) {
                showMessage('å¯†ç¢¼ä¸åŒ¹é…', 'error');
                return;
            }
            
            if (password.length < 8) {
                showMessage('å¯†ç¢¼è‡³å°‘éœ€è¦8å€‹å­—ç¬¦', 'error');
                return;
            }
            
            showLoading('registerBtn', 'è¨»å†Šä¸­...');
            clearMessage();
            
            const attributeList = [
                new AmazonCognitoIdentity.CognitoUserAttribute({
                    Name: 'email',
                    Value: email
                })
            ];
            
            debugLog('é–‹å§‹è¨»å†Šç”¨æˆ¶: ' + email);
            
            userPool.signUp(email, password, attributeList, null, function(err, result) {
                hideLoading('registerBtn', 'è¨»å†Š');
                
                if (err) {
                    debugLog('è¨»å†Šå¤±æ•—: ' + err.message);
                    let errorMessage = 'è¨»å†Šå¤±æ•—: ';
                    
                    switch (err.code) {
                        case 'UsernameExistsException':
                            errorMessage += 'æ­¤é›»å­éƒµä»¶å·²è¢«è¨»å†Š';
                            break;
                        case 'InvalidPasswordException':
                            errorMessage += 'å¯†ç¢¼ä¸ç¬¦åˆè¦æ±‚';
                            break;
                        case 'InvalidParameterException':
                            errorMessage += 'åƒæ•¸ç„¡æ•ˆ';
                            break;
                        default:
                            errorMessage += err.message;
                    }
                    
                    showMessage(errorMessage, 'error');
                    return;
                }
                
                debugLog('è¨»å†ŠæˆåŠŸ: ' + result.user.getUsername());
                pendingUsername = email;
                showMessage('è¨»å†ŠæˆåŠŸï¼è«‹æŸ¥çœ‹æ‚¨çš„é›»å­éƒµä»¶ä¸¦è¼¸å…¥é©—è­‰ç¢¼ã€‚', 'success');
                
                // åˆ‡æ›åˆ°é©—è­‰è¡¨å–®
                document.querySelectorAll('.form-section').forEach(section => section.classList.remove('active'));
                document.getElementById('verifyForm').classList.add('active');
