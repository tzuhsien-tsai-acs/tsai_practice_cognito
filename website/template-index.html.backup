        function signIn(event) {
            event.preventDefault();
            
            if (!userPool) {
                showMessage('ç³»çµ±å°šæœªåˆå§‹åŒ–ï¼Œè«‹é‡æ–°æ•´ç†é é¢', 'error');
                return;
