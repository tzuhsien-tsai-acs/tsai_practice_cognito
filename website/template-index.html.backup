    <script>
        // é™¤éŒ¯å‡½æ•¸
        function debugLog(message) {
            console.log(message);
            const debugDiv = document.getElementById('debugInfo');
            debugDiv.style.display = 'block';
            debugDiv.textContent += new Date().toLocaleTimeString() + ': ' + message + '\n';
        }

        // å…¨åŸŸè®Šæ•¸
        let userPool = null;
        let currentUser = null;
        let pendingUsername = null;
        
        // AWS Cognito é…ç½® - é€™äº›å€¼å°‡è¢«éƒ¨ç½²è…³æœ¬è‡ªå‹•æ›¿æ›
        const config = {
            region: '{{REGION}}',
            userPoolId: '{{USER_POOL_ID}}',
            clientId: '{{CLIENT_ID}}'
        };
        
        // æª¢æŸ¥ SDK è¼‰å…¥ç‹€æ…‹
        function checkSDKLoaded() {
            debugLog('æª¢æŸ¥ SDK è¼‰å…¥ç‹€æ…‹...');
            
            if (typeof AWS === 'undefined') {
                debugLog('AWS SDK æœªè¼‰å…¥');
                return false;
            }
            
            if (typeof AmazonCognitoIdentity === 'undefined') {
                debugLog('Amazon Cognito Identity SDK æœªè¼‰å…¥');
                return false;
            }
            
            debugLog('æ‰€æœ‰ SDK å·²è¼‰å…¥');
            return true;
        }
        
        // åˆå§‹åŒ–å‡½æ•¸
        function initializeCognito() {
            try {
                debugLog('é–‹å§‹åˆå§‹åŒ– Cognito...');
                debugLog('é…ç½®: ' + JSON.stringify(config, null, 2));
                
                // æª¢æŸ¥é…ç½®æ˜¯å¦æœ‰æ•ˆ
                // æª¢æŸ¥é…ç½®æ˜¯å¦æœ‰æ•ˆ (ä¿®æ­£å¾Œçš„é‚è¼¯)
                if (!config.userPoolId) {
                    throw new Error('User Pool ID æœªé…ç½®');
                }
                
                if (!config.clientId) {
                    throw new Error('Client ID æœªé…ç½®');
                }
                
                if (!config.region) {
                    throw new Error('Region æœªé…ç½®');
                }
                // è¨­ç½® AWS é…ç½®
                AWS.config.region = config.region;
                debugLog('AWS å€åŸŸè¨­ç½®ç‚º: ' + config.region);
                
                // å‰µå»º User Pool
                const poolData = {
                    UserPoolId: config.userPoolId,
                    ClientId: config.clientId
                };
                
                userPool = new AmazonCognitoIdentity.CognitoUserPool(poolData);
                debugLog('User Pool å‰µå»ºæˆåŠŸ');
                
                // æ›´æ–°é…ç½®é¡¯ç¤º
                document.getElementById('configRegion').textContent = config.region;
                document.getElementById('configUserPool').textContent = config.userPoolId;
                document.getElementById('configClientId').textContent = config.clientId;
                document.getElementById('configStatus').textContent = 'å·²é€£æ¥';
                document.getElementById('configStatus').style.color = '#10b981';
                
                debugLog('Cognito åˆå§‹åŒ–æˆåŠŸ');
                
                // æª¢æŸ¥æ˜¯å¦å·²ç™»å…¥
                checkCurrentUser();
                
            } catch (error) {
                debugLog('Cognito åˆå§‹åŒ–å¤±æ•—: ' + error.message);
                document.getElementById('configStatus').textContent = 'é€£æ¥å¤±æ•—: ' + error.message;
                document.getElementById('configStatus').style.color = '#ef4444';
                showMessage('ç³»çµ±åˆå§‹åŒ–å¤±æ•—: ' + error.message, 'error');
            }
        }
        
        // æª¢æŸ¥ç•¶å‰ç”¨æˆ¶
        function checkCurrentUser() {
            if (!userPool) {
                debugLog('User Pool æœªåˆå§‹åŒ–');
                return;
            }
            
            try {
                currentUser = userPool.getCurrentUser();
                debugLog('ç•¶å‰ç”¨æˆ¶: ' + (currentUser ? currentUser.getUsername() : 'null'));
                
                if (currentUser != null) {
                    currentUser.getSession(function(err, session) {
                        if (err) {
                            debugLog('ç²å–æœƒè©±å¤±æ•—: ' + err.message);
                            return;
                        }
                        
                        debugLog('æœƒè©±ç‹€æ…‹: ' + session.isValid());
                        if (session.isValid()) {
                            showUserInfo(currentUser);
                        }
                    });
                }
            } catch (error) {
                debugLog('æª¢æŸ¥ç•¶å‰ç”¨æˆ¶å¤±æ•—: ' + error.message);
            }
        }
        
        // ç­‰å¾… SDK è¼‰å…¥çš„å‡½æ•¸
        function waitForSDKs(callback, maxAttempts = 10, currentAttempt = 0) {
            if (checkSDKLoaded()) {
                callback();
                return;
            }
            
            if (currentAttempt >= maxAttempts) {
                debugLog('SDK è¼‰å…¥è¶…æ™‚');
                showMessage('AWS SDK è¼‰å…¥å¤±æ•—ï¼Œè«‹é‡æ–°æ•´ç†é é¢', 'error');
                return;
            }
            
            debugLog(`ç­‰å¾… SDK è¼‰å…¥... (å˜—è©¦ ${currentAttempt + 1}/${maxAttempts})`);
            setTimeout(() => {
                waitForSDKs(callback, maxAttempts, currentAttempt + 1);
            }, 1000);
        }
        
        // é é¢è¼‰å…¥å®Œæˆäº‹ä»¶
        document.addEventListener('DOMContentLoaded', function() {
            debugLog('DOM è¼‰å…¥å®Œæˆ');
            
            // ç­‰å¾… SDK è¼‰å…¥
            waitForSDKs(function() {
                debugLog('SDK è¼‰å…¥å®Œæˆï¼Œé–‹å§‹åˆå§‹åŒ–');
                initializeCognito();
            });
        });
        
        // å‚™ç”¨åˆå§‹åŒ–ï¼ˆwindow.onloadï¼‰
        window.addEventListener('load', function() {
            debugLog('é é¢å®Œå…¨è¼‰å…¥');
            
            // å¦‚æœé‚„æ²’åˆå§‹åŒ–ï¼Œå†è©¦ä¸€æ¬¡
            if (!userPool) {
                waitForSDKs(function() {
                    debugLog('å‚™ç”¨åˆå§‹åŒ–é–‹å§‹');
                    initializeCognito();
                });
            }
        });
        
        function showTab(tab) {
            // æ¸…é™¤ä¹‹å‰çš„éŒ¯èª¤è¨Šæ¯
            clearMessage();
            
