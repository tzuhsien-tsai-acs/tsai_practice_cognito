            if (!email || !password) {
                showMessage('è«‹å¡«å¯«é›»å­éƒµä»¶å’Œå¯†ç¢¼', 'error');
                return;
            }
            
            showLoading('loginBtn', 'ç™»å…¥ä¸­...');
            clearMessage();
            
            const authenticationData = {
                Username: email,
                Password: password,
            };
            
            const authenticationDetails = new AmazonCognitoIdentity.AuthenticationDetails(authenticationData);
            
            const userData = {
                Username: email,
